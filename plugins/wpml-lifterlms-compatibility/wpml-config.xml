        <taxonomy translate="1">course_tag</taxonomy>
        <taxonomy translate="1">course_difficulty</taxonomy>
        <taxonomy translate="1">course_track</taxonomy>
        
        <!-- Membership Taxonomies -->
        <taxonomy translate="1">membership_cat</taxonomy>
        <taxonomy translate="1">membership_tag</taxonomy>
    </taxonomies>
    
