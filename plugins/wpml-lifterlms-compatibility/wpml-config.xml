    <post-types>
        <!-- Core Content Types - Fully Translatable -->
        <post-type translate="1" display-as-translated="1">course</post-type>
        <post-type translate="1" display-as-translated="1">lesson</post-type>
        <post-type translate="1" display-as-translated="1">llms_quiz</post-type>
        <post-type translate="1" display-as-translated="1">llms_question</post-type>
        <post-type translate="1" display-as-translated="1">llms_membership</post-type>
        <post-type translate="1" display-as-translated="1">llms_certificate</post-type>
        <post-type translate="1" display-as-translated="1">llms_achievement</post-type>
        <post-type translate="1" display-as-translated="1">llms_email</post-type>
        <post-type translate="1" display-as-translated="1">llms_access_plan</post-type>
        <post-type translate="1" display-as-translated="1">llms_engagement</post-type>
        <post-type translate="1" display-as-translated="1">llms_form</post-type>
        
        <!-- Structural Types - Duplicate Only -->
        <post-type translate="0" display-as-translated="0">section</post-type>
        
        <!-- E-commerce Types - Duplicate with Shared Data -->
        <post-type translate="0" display-as-translated="1">llms_coupon</post-type>
        <post-type translate="0" display-as-translated="1">llms_voucher</post-type>
        
        <!-- System Types - Do Not Translate -->
        <post-type translate="0" display-as-translated="0">llms_order</post-type>
        <post-type translate="0" display-as-translated="0">llms_transaction</post-type>
        <post-type translate="0" display-as-translated="0">llms_my_certificate</post-type>
    </post-types>
    
    <!-- LifterLMS Taxonomies -->
